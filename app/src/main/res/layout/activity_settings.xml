<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Switch
        android:id="@+id/switch_ru_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Русский язык"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_ru_lang"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_translit_ru_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:text=" Русский (translit)"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_translit_ru_lang"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_ua_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:text=" Украинский язык"
        android:textSize="24sp"
        tools:checked="false" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_ua_lang"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:text=" Чувствительность перемещения курсора свайпом по нижней панели:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:max="10"
        android:progress="10" />

    <TextView
        android:id="@+id/textViewSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:text="Ниже        |        Выше"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewSeekBar"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/toast_show_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:text=" Отображение Toast при смене языка"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_toast_show_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toast_show_lang"
        android:text=" Необходимо включить, для корректной работы Text Layout Tools" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_toast_show_lang"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_alt_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider5"
        android:text=" Выключать ALT пробелом"
        android:textSize="24sp"
        tools:checked="true" />

    <TextView
        android:id="@+id/text_help_alt_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_alt_space"
        android:text="ВКЛ: ALT символы/цифры будут набираться до тех пор, пока не будет нажат пробел;\n
ВЫКЛ: ALT символы/цифры будет отключен сразу после ввода первого символа (как в blackberry keyboard)." />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_help_alt_space"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider6"
        android:text=" Флаг на нижней панели"
        android:textSize="24sp"
        tools:checked="false" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_flag"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_longpress_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider7"
        android:text="При удержании буквы ввод соответствующих знаков из ALT/SYM раскладки"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_longpress_alt"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_space_accept_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider8"
        android:text=" Поднимать трубку двойным пробелом"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_space_accept_call"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/sizeBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider9"
        android:text=" Высота нижней панели:"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <SeekBar
        android:id="@+id/seekBarBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sizeBtnPanel"
        android:max="10"
        android:progress="10" />

    <TextView
        android:id="@+id/textViewBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarBtnPanel"
        android:text="Меньше        |        Больше"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewBtnPanel"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_show_default_onscreen_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider10"
        android:text="Показывать нижнюю наэкранную свайп-панель"
        android:textSize="24sp"
        tools:checked="true" />

    <TextView
        android:id="@+id/text_help_pocket_patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_show_default_onscreen_keyboard"
        android:text="На которой стрелки и язык (с флажком) и которая появляется в полях ввода.\n
Открывание наэкранной SYM, NAV клавиатуры в любом случае будет работать.\n
Открыть/закрыть панель при любой настройке можно Shift+Ctrl." />
    <View
        android:id="@+id/divider11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_help_pocket_patch"
        android:background="?android:attr/listDivider" />
    <Switch
        android:id="@+id/switch_keyboard_gestures_at_views_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider11"
        android:text="Режим жестов по клавиатуре всегда включен"
        android:textSize="24sp"
        tools:checked="true" />

    <TextView
        android:id="@+id/text_help_switch_keyboard_gestures_at_views_enabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_keyboard_gestures_at_views_enabled"
        android:text="Принцип работы сходен с Blackberry Keyboard.\n
ВКЛ: режим жестов по клавиатуре будет работать по всех приложениях (чаще всего как прокрутка).
Кроме(!) полей ввода, где режим жестов надо включать явно (см. дальше).\n
ВЫКЛ: Режим жестов работает только в полях ввода, где его нужно включать явно.\n
Включение режима жестов в полях ввода:\n
A. Временный (удобно, чтобы вернуться на несколько символов, подправить и вернуться обратно):\n
1. Ставим палец на клавиатуру;\n
2. Зажимаем KEY '0';\n
3. Делаем свайп по клавиатуре влево или вправо.\n
Б. Постоянный (удобно, если есть только одна рука или чтобы куда-то далеко по тексту ехать несколькими свайпами:\n
1. K1: 2хRShift; K2: 2хCtrl;\n
2. Делаем свайпы влево или вправо;\n
3. Автоматически отключается, когда начинаешь вводить текст."  />
    <View
        android:id="@+id/divider12"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_help_switch_keyboard_gestures_at_views_enabled"
        android:background="?android:attr/listDivider" />

</RelativeLayout>
</ScrollView>