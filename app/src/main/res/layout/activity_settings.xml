<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Switch
        android:id="@+id/switch_ru_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Русский язык"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_ru_lang"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_translit_ru_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:text=" Русский (translit)"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_translit_ru_lang"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_ua_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:editable="false"
        android:text=" Украинский язык"
        android:textSize="24sp"
        tools:checked="false" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_ua_lang"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:text=" Чувствительность перемещения курсора свайпом по нижней панели:"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:max="10"
        android:progress="10" />

    <TextView
        android:id="@+id/textViewSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:text="Ниже        |        Выше"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewSeekBar"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/toast_show_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:text=" Отображение Toast при смене языка"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_toast_show_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toast_show_lang"
        android:text=" Необходимо включить, для корректной работы Text Layout Tools" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_toast_show_lang"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_alt_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider5"
        android:text=" Выключать ALT пробелом"
        android:textSize="24sp"
        tools:checked="true" />

    <TextView
        android:id="@+id/text_help_alt_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_alt_space"
        android:text="ВКЛ:  ALT символы/цифры будут набираться до тех пор, пока не будет нажат пробел; ВЫКЛ:  ALT символы/цифры будет отключен сразу после ввода первого символа (как в blackberry keyboard)." />

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/text_help_alt_space"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider6"
        android:text=" Флаг на нижней панели"
        android:textSize="24sp"
        tools:checked="false" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_flag"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_longpress_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider7"
        android:text="При удержании буквы ввод соответствующих знаков из ALT/SYM раскладки"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_longpress_alt"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_space_accept_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider8"
        android:text=" Поднимать трубку двойным пробелом"
        android:textSize="24sp"
        tools:checked="true" />

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/switch_space_accept_call"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/sizeBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider9"
        android:text=" Высота нижней панели:"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <SeekBar
        android:id="@+id/seekBarBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sizeBtnPanel"
        android:max="10"
        android:progress="10" />

    <TextView
        android:id="@+id/textViewBtnPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBarBtnPanel"
        android:text="Меньше        |        Больше"
        android:textAlignment="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewBtnPanel"
        android:background="?android:attr/listDivider" />

    <Switch
        android:id="@+id/switch_pocket_patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider10"
        android:text="Показывать нижнюю наэкранную свайп-панель"
        android:textSize="24sp"
        tools:checked="true" />

    <TextView
        android:id="@+id/text_help_pocket_patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_pocket_patch"
        android:text="На которой стрелочки и язык с флажком. Открывание наэкранной SYM, NAV клавиатуры в любом случае будет работать." />

</RelativeLayout>
</ScrollView>